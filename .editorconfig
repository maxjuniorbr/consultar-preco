# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,html,css}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 2

[*.json]
indent_size = 2
